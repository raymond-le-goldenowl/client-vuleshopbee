{
	"name": "vuleshopbee",
	"version": "0.1.0",
	"private": true,
	"dependencies": {
		"@mui/material": "^5.6.0",
		"@mui/styled-engine-sc": "^5.5.2",
		"@reduxjs/toolkit": "^1.8.1",
		"@testing-library/jest-dom": "^4.2.4",
		"@testing-library/react": "^9.5.0",
		"@testing-library/user-event": "^7.2.1",
		"axios": "^0.26.1",
		"react": "^18.0.0",
		"react-dom": "^18.0.0",
		"react-icons": "^4.3.1",
		"react-redux": "^7.2.8",
		"react-router-dom": "6",
		"react-scripts": "5.0.0",
		"react-toastify": "^8.2.0",
		"styled-components": "^5.3.5"
	},
	"scripts": {
		"start": "react-scripts start",
		"build": "react-scripts build",
		"test": "react-scripts test",
		"eject": "react-scripts eject",
		"lint": "eslint --ext js,jsx \"src/**(*.jsx|*.js)\"",
		"lint:fix": "eslint --fix --ext js,jsx \"src/**(*.jsx|*.js)\"",
		"prettier": "prettier --check \"src/**(**.jsx|*.js|*.scss|*.css)\"",
		"prettier:fix": "prettier --write \"src/**/*.+(jsx|js|scss|css)\"",
    "postinstall": "husky install"
	},
	"eslintConfig": {
		"extends": "react-app"
	},
	"browserslist": {
		"production": [
			">0.2%",
			"not dead",
			"not op_mini all"
		],
		"development": [
			"last 1 chrome version",
			"last 1 firefox version",
			"last 1 safari version"
		]
	},
	"devDependencies": {
		"eslint-config-prettier": "^8.5.0",
		"eslint-plugin-prettier": "^4.0.0",
		"husky": "^7.0.4",
		"lint-staged": "^12.3.6",
		"prettier": "^2.6.0"
	},
	"lint-staged": {
		"src/**/*.+(jsx|js|css|scss|ts|tsx|md|json|yml|yaml)": [
			"yarn run lint",
			"yarn run lint:fix",
			"git add -A"
		]
	}
}
