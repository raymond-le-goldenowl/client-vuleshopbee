{
	"env": {
		"browser": true,
		"es2021": true,
		"node": true
	},
	"extends": ["react-app", "prettier"],
	"parserOptions": {
		"ecmaFeatures": {
			"jsx": true
		},
		"ecmaVersion": 13,
		"sourceType": "module"
	},
	"plugins": ["react", "prettier"],
	"rules": {
		"prettier/prettier": [
			"warn",
			{
				"arrowParens": "avoid",
				"trailingComma": "all",
				"useTabs": true,
				"semi": true,
				"endOfLine": "lf",
				"tabWidth": 1,
				"printWidth": 80,
				"singleQuote": true,
				"jsxSingleQuote": true,
				"jsxBracketSameLine": true,
				"bracketSpacing": false,
				"indent": ["error", 2]
			}
		],
		"react-hooks/exhaustive-deps": "off"
	}
}
